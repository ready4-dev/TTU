  entry    = "Manual",
  doi      = "10.5281/zenodo.5646593",
  title    = paste0(meta$Package,": ",meta$Title),
  author   = c(person("Caroline Gao <caroline.gao@orygen.org.au> [aut]", "(<https://orcid.org/0000-0002-0987-2759>)"), person("Matthew Hamilton <matthew.hamilton@orygen.org.au> [aut, cre]", "(<https://orcid.org/0000-0001-7407-9194>)")),
  year     = "2022",
  note     = sprintf("R package version %s", meta$Version),
  url      = "https://ready4-dev.github.io/TTU/",
  textVersion = paste("Caroline Gao <caroline.gao@orygen.org.au> [aut] (<https://orcid.org/0000-0002-0987-2759>), Matthew Hamilton <matthew.hamilton@orygen.org.au> [aut and cre] (<https://orcid.org/0000-0001-7407-9194>) ",
  "(2022).",
  paste0(meta$Package,": ",meta$Title,
  "."),
  paste0(sprintf("Version %s", meta$Version),"."),
  paste0("https://doi.org/",
"10.5281/zenodo.5646593")
  )
)
